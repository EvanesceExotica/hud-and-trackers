	<div class="clockCategory__wrapper">
	
		{{#each this}}
			<div class="clockCategory {{@key}} glass" data-name="{{@key}}">
			<button class="clockCategory__btn glass__btn {{#if (lookup @root.categoriesShown @key)}}open{{/if}}" data-action="expand" title="{{lookup @root.tooltipText @key}}"><span class="accordionBtn__text">{{convertToSentence @key}}</span></button>
				<div class="clockCategory__inner">
					{{#each this}}
					{{> 'modules/hud-and-trackers/templates/clock.hbs' miniDisplay=true}}
					{{else}}
					<p class="empty">{{lookup @root.emptyText @key}}</p>
					{{/each}}
					<button class="addClock actionButton" data-action="addClock" title="{{lookup @root.addClockTooltipText @key}}"><i class="fas fa-plus"></i></button>
				</div>
			</div>
		{{/each}}
	</div>
